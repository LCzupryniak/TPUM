<Window x:Class="Presentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp.Presentation.Views"
        xmlns:vm="clr-namespace:ShopApp.Presentation.ViewModels"
        mc:Ignorable="d"
        Title="Sklep - System zarz¹dzania" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Plik">
                <MenuItem Header="Zamknij" />
            </MenuItem>
            <MenuItem Header="Produkty">
                <MenuItem Header="Zarz¹dzaj" />
            </MenuItem>
            <MenuItem Header="Zamówienia">
                <MenuItem Header="Historia" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista produktów -->
            <GroupBox Grid.Column="0" Header="Dostêpne produkty" Margin="5">
                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding AvailableProducts}" 
                          SelectedItem="{Binding SelectedProduct}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" />
                        <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Cena" Binding="{Binding Price, StringFormat={}{0:C}}" />
                        <DataGridTextColumn Header="Stan" Binding="{Binding Quantity}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Przyciski akcji -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
                <Button Content="Dodaj do koszyka" Margin="5" Padding="5" 
                        Command="{Binding AddToCartCommand}" />
                <Button Content="Z³ó¿ zamówienie" Margin="5" Padding="5"
                        Command="{Binding CreateOrderCommand}" />
            </StackPanel>

            <!-- Lista zamówieñ -->
            <GroupBox Grid.Column="2" Header="Zamówienia" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Margin="5">
                        <Run Text="Suma koszyka: "/>
                        <Run Text="{Binding CartTotal, StringFormat={}{0:C}}"/>
                    </TextBlock>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{Binding CustomerOrders}" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" />
                            <DataGridTextColumn Header="Klient" Binding="{Binding CustomerOwner.LastName}" />
                            <DataGridTextColumn Header="Kwota" Binding="{Binding TotalCost, StringFormat={}{0:C}}" />
                            <DataGridTextColumn Header="Status" Binding="{Binding CurrentStatus}" />
                            <DataGridTextColumn Header="Data" Binding="{Binding OrderDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <StatusBar Grid.Row="2">
            <TextBlock Text="Sklep - System zarz¹dzania | © 2025" />
        </StatusBar>
    </Grid>
</Window>